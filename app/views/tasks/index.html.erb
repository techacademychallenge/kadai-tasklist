<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <th><%= link_to task.id, task %></th>
          <th><%= task.content %></th>
          <th><%= task.status %></th>
        </tr>
      <% end %>
    </tbody>
    
  </table>
<% end %>
<div>
  <%= paginate @tasks %>
</div>

<%= link_to '新規作成', new_task_path, class: "btn btn-primary" %>